#%Module1.0
##
## GCC 11 compiler suite
##
proc ModulesHelp { } {
    puts stderr "GCC 11 compiler suite with MPI integration"
}

module-whatis "GCC 11 compiler suite with MPI support"

setenv OMPI_CC gcc-11
setenv OMPI_CXX g++-11  
setenv OMPI_FC gfortran-11

setenv CC gcc-11
setenv CXX g++-11
setenv FC gfortran-11
setenv F77 gfortran-11

if { [module-info mode load] } {
    puts stderr "Loaded GCC 11 compiler suite"
    puts stderr "  OpenMPI will use GCC 11"
}

conflict gcc intel-compiler clang
